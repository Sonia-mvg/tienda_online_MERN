{
  "version": 2,
  "name": "tienda_online_MERN",
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "server/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/$1" },
    { "src": "/(.*)", "dest": "/client/$1" }
  ]
}
